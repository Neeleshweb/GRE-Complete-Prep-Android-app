<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mega.GRE.Preparation.MainActivitytab$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview2"

        android:textStyle="bold"
        android:textAlignment="center"

        android:textColor="#fff"
        android:textSize="20dp"
        android:text="THIS IS TO TEST YOUR ABILITIES AFTER SOME PRACTICE. YOU CAN GIVE QUIZ ON 3 TYPES.SELECT ACCORDINGLY.HAPPY LEARNING"
        />

    <Button
        android:text="QUANT QUIZ-->"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_disabled"
        android:id="@+id/button11" />


    <Button
        android:text="VERBAL QUIZ-->"
        android:layout_width="230dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_enabled"
        android:layout_height="wrap_content"
        android:id="@+id/button12" />

    <Button
        android:text="MISCELLANEOUS QUIZ-->"
        android:layout_width="230dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/button_best"
        android:layout_height="wrap_content"
        android:id="@+id/button13" />



</LinearLayout>